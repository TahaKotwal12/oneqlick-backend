# ============================================
# OneQlick Backend - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# Application Configuration
# ============================================
APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO
PORT=8000
HOST=0.0.0.0
WORKERS=4   

# ============================================    
# Security Configuration
# ============================================
# IMPORTANT: Generate secure random keys using: python scripts/generate-secrets.py
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Password Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/oneqlick

# Database Pool Settings
DB_POOL_MAX_SIZE=10
DB_POOL_MIN_IDLE=1
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_MAX_LIFETIME=1800000
DB_POOL_CONNECTION_TIMEOUT=30000
DB_POOL_NAME=OneQlickFoodDeliveryCP

# ============================================
# Redis Configuration (Caching & Sessions)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=300
REDIS_NAMESPACE=oneqlick
REDIS_TIMEOUT_MS=10000

# Redis Pool Settings
REDIS_MAX_ACTIVE=20
REDIS_MAX_IDLE=5
REDIS_MIN_IDLE=1

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8081,https://yourdomain.com
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_HEADERS=*

# ============================================
# Google OAuth (Optional)
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_PROJECT_ID=your-project-id

# ============================================
# Payment Gateway (Optional - Future Use)
# ============================================
# Razorpay
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Paytm
PAYTM_MERCHANT_ID=
PAYTM_MERCHANT_KEY=

# ============================================
# SMS/OTP Configuration (Optional)
# ============================================
SMS_PROVIDER=twilio

# Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# MSG91 (Alternative)
MSG91_AUTH_KEY=
MSG91_TEMPLATE_ID=

# ============================================
# Email Configuration
# ============================================
# SendGrid (Recommended for production - works on Railway/AWS)
SENDGRID_API_KEY=your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# SMTP (Fallback - may not work on some cloud platforms)
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# ============================================
# File Upload Configuration
# ============================================
UPLOAD_MAX_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx
UPLOAD_PATH=uploads

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# ============================================
# Monitoring & Logging (Optional)
# ============================================
SENTRY_DSN=
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# ============================================
# Batch Cleanup Worker
# ============================================
CLEANUP_INTERVAL_HOURS=1
CLEANUP_ENABLED=true
